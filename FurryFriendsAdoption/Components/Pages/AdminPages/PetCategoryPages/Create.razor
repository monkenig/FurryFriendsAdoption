@page "/petcategories/create"
@using Microsoft.EntityFrameworkCore
@using FurryFriendsAdoption.Domain
@inject IDbContextFactory<FurryFriendsAdoption.Data.FurryFriendsAdoptionContext> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Create</PageTitle>

<h1>Create</h1>

<h2>PetCategory</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <EditForm method="post" Model="PetCategory" OnValidSubmit="AddPetCategory" FormName="create" Enhance>
            <DataAnnotationsValidator />
            <ValidationSummary class="text-danger" role="alert"/>
            <div class="mb-3">
                <label for="name" class="form-label">Name:</label> 
                <InputText id="name" @bind-Value="PetCategory.Name" class="form-control" /> 
                <ValidationMessage For="() => PetCategory.Name" class="text-danger" /> 
            </div>        
            <div class="mb-3">
                <label for="datecreated" class="form-label">DateCreated:</label> 
                <InputDate id="datecreated" @bind-Value="PetCategory.DateCreated" class="form-control" /> 
                <ValidationMessage For="() => PetCategory.DateCreated" class="text-danger" /> 
            </div>        
            <div class="mb-3">
                <label for="dateupdated" class="form-label">DateUpdated:</label> 
                <InputDate id="dateupdated" @bind-Value="PetCategory.DateUpdated" class="form-control" /> 
                <ValidationMessage For="() => PetCategory.DateUpdated" class="text-danger" /> 
            </div>        
            <div class="mb-3">
                <label for="createdby" class="form-label">CreatedBy:</label> 
                <InputText id="createdby" @bind-Value="PetCategory.CreatedBy" class="form-control" /> 
                <ValidationMessage For="() => PetCategory.CreatedBy" class="text-danger" /> 
            </div>        
            <div class="mb-3">
                <label for="updatedby" class="form-label">UpdatedBy:</label> 
                <InputText id="updatedby" @bind-Value="PetCategory.UpdatedBy" class="form-control" /> 
                <ValidationMessage For="() => PetCategory.UpdatedBy" class="text-danger" /> 
            </div>        
            <button type="submit" class="btn btn-primary">Create</button>
        </EditForm>
    </div>
</div>

<div>
    <a href="/petcategories">Back to List</a>
</div>

@code {
    [SupplyParameterFromForm]
    private PetCategory PetCategory { get; set; } = new();

    // To protect from overposting attacks, see https://learn.microsoft.com/aspnet/core/blazor/forms/#mitigate-overposting-attacks.
    private async Task AddPetCategory()
    {
        using var context = DbFactory.CreateDbContext();
        context.PetCategory.Add(PetCategory);
        await context.SaveChangesAsync();
        NavigationManager.NavigateTo("/petcategories");
    }
}

@page "/petcategories/delete"
@using Microsoft.EntityFrameworkCore
@using FurryFriendsAdoption.Domain
@inject IDbContextFactory<FurryFriendsAdoption.Data.FurryFriendsAdoptionContext> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Delete</PageTitle>

<h1>Delete</h1>

<p>Are you sure you want to delete this?</p>
<div>
    <h2>PetCategory</h2>
    <hr />
    @if (petcategory is null)
    {
        <p><em>Loading...</em></p>
    }
    else {
        <dl class="row">
            <dt class="col-sm-2">Name</dt>
            <dd class="col-sm-10">@petcategory.Name</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">DateCreated</dt>
            <dd class="col-sm-10">@petcategory.DateCreated</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">DateUpdated</dt>
            <dd class="col-sm-10">@petcategory.DateUpdated</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">CreatedBy</dt>
            <dd class="col-sm-10">@petcategory.CreatedBy</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">UpdatedBy</dt>
            <dd class="col-sm-10">@petcategory.UpdatedBy</dd>
        </dl>
        <EditForm method="post" Model="petcategory" OnValidSubmit="DeletePetCategory" FormName="delete" Enhance>
            <button type="submit" class="btn btn-danger" disabled="@(petcategory is null)">Delete</button> |
            <a href="/petcategories">Back to List</a>
        </EditForm>
    }
</div>

@code {
    private PetCategory? petcategory;

    [SupplyParameterFromQuery]
    private int Id { get; set; }

    protected override async Task OnInitializedAsync()
    {
        using var context = DbFactory.CreateDbContext();
        petcategory = await context.PetCategory.FirstOrDefaultAsync(m => m.Id == Id);

        if (petcategory is null)
        {
            NavigationManager.NavigateTo("notfound");
        }
    }

    private async Task DeletePetCategory()
    {
        using var context = DbFactory.CreateDbContext();
        context.PetCategory.Remove(petcategory!);
        await context.SaveChangesAsync();
        NavigationManager.NavigateTo("/petcategories");
    }
}

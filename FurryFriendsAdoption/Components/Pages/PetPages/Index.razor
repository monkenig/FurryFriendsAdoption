@page "/pets"
@using Microsoft.EntityFrameworkCore
@using Microsoft.AspNetCore.Components.QuickGrid
@using FurryFriendsAdoption.Domain
@using FurryFriendsAdoption.Data
@implements IAsyncDisposable
@inject IDbContextFactory<FurryFriendsAdoption.Data.FurryFriendsAdoptionContext> DbFactory

@attribute [Authorize(Roles = "Administrator, User")]
<PageTitle>Index</PageTitle>

<h1>Index</h1>

<p>
    <AuthorizeView Roles="Administrator">
    <a href="pets/create">Create New</a>
    </AuthorizeView>
</p>

<QuickGrid Class="table" Items="context.Pet">
    <PropertyColumn Property="pet => pet.Name" />
    <PropertyColumn Property="pet => pet.Species" />
    <PropertyColumn Property="pet => pet.Breed" />
    <PropertyColumn Property="pet => pet.Age" />
    <PropertyColumn Property="pet => pet.Gender" />
    <PropertyColumn Property="pet => pet.IsAdopted" />
    <PropertyColumn Property="pet => pet.IsVaccinated" />
    <PropertyColumn Property="pet => pet.PetCategoryId" />
    <PropertyColumn Property="pet => pet.DateCreated" />
    <PropertyColumn Property="pet => pet.DateUpdated" />
    <PropertyColumn Property="pet => pet.CreatedBy" />
    <PropertyColumn Property="pet => pet.UpdatedBy" />

    <TemplateColumn Context="pet">
        <AuthorizeView Roles="Administrator">
        <a href="@($"pets/edit?id={pet.Id}")">Edit</a> 
        </AuthorizeView>
        <AuthorizeView Roles="Administrator">
            | <a href="@($"pets/details?id={pet.Id}")">Details</a>
        </AuthorizeView>
        <AuthorizeView Roles="Administrator">
            | <a href="@($"pets/delete?id={pet.Id}")">Delete</a>
        </AuthorizeView>
    </TemplateColumn>
</QuickGrid>

@code {
    private FurryFriendsAdoptionContext context = default!;

    protected override void OnInitialized()
    {
        context = DbFactory.CreateDbContext();
    }

    public async ValueTask DisposeAsync() => await context.DisposeAsync();
}

@page "/adoptionapplications/create"
@using Microsoft.EntityFrameworkCore
@using FurryFriendsAdoption.Domain
@inject IDbContextFactory<FurryFriendsAdoption.Data.FurryFriendsAdoptionContext> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Create</PageTitle>

<h1>Create</h1>

<h2>AdoptionApplication</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <EditForm method="post" Model="AdoptionApplication" OnValidSubmit="AddAdoptionApplication" FormName="create" Enhance>
            <DataAnnotationsValidator />
            <ValidationSummary class="text-danger" role="alert"/>
            <div class="mb-3">
                <label for="petid" class="form-label">Pet:</label> 
                <InputSelect id="petid" @bind-Value="AdoptionApplication.PetId" class="form-control">
                    <option value="">-- Select Pet --</option>
                    @if (Pets != null)
                    {
                        foreach (var pet in Pets)
                        {
                            <option value="@pet.Id">@pet.Name</option>
                        }
                    }
                </InputSelect>
                @* <InputNumber id="petid" @bind-Value="AdoptionApplication.PetId" class="form-control" /> 
                <ValidationMessage For="() => AdoptionApplication.PetId" class="text-danger" />  *@
            </div>        
            <div class="mb-3">
                <label for="customerid" class="form-label">Customer:</label> 
                <InputSelect id="customerid" @bind-Value="AdoptionApplication.CustomerId" class="form-control">
                    <option value="">-- Select Customer --</option>
                    @if (Customers != null)
                    {
                        foreach (var customer in Customers)
                        {
                            <option value="@customer.Id">@customer.FirstName @customer.LastName</option>
                        }
                    }
                </InputSelect>
                @* <InputNumber id="customerid" @bind-Value="AdoptionApplication.CustomerId" class="form-control" /> 
                <ValidationMessage For="() => AdoptionApplication.CustomerId" class="text-danger" />  *@
            </div>        
            <div class="mb-3">
                <label for="status" class="form-label">Status:</label> 
                <InputText id="status" @bind-Value="AdoptionApplication.Status" class="form-control" /> 
                <ValidationMessage For="() => AdoptionApplication.Status" class="text-danger" /> 
            </div>        
            <div class="mb-3">
                <label for="applicationdate" class="form-label">ApplicationDate:</label> 
                <InputDate id="applicationdate" @bind-Value="AdoptionApplication.ApplicationDate" class="form-control" /> 
                <ValidationMessage For="() => AdoptionApplication.ApplicationDate" class="text-danger" /> 
            </div>        
            <div class="mb-3">
                <label for="datecreated" class="form-label">DateCreated:</label> 
                <InputDate id="datecreated" @bind-Value="AdoptionApplication.DateCreated" class="form-control" /> 
                <ValidationMessage For="() => AdoptionApplication.DateCreated" class="text-danger" /> 
            </div>        
            <div class="mb-3">
                <label for="dateupdated" class="form-label">DateUpdated:</label> 
                <InputDate id="dateupdated" @bind-Value="AdoptionApplication.DateUpdated" class="form-control" /> 
                <ValidationMessage For="() => AdoptionApplication.DateUpdated" class="text-danger" /> 
            </div>        
            <div class="mb-3">
                <label for="createdby" class="form-label">CreatedBy:</label> 
                <InputText id="createdby" @bind-Value="AdoptionApplication.CreatedBy" class="form-control" /> 
                <ValidationMessage For="() => AdoptionApplication.CreatedBy" class="text-danger" /> 
            </div>        
            <div class="mb-3">
                <label for="updatedby" class="form-label">UpdatedBy:</label> 
                <InputText id="updatedby" @bind-Value="AdoptionApplication.UpdatedBy" class="form-control" /> 
                <ValidationMessage For="() => AdoptionApplication.UpdatedBy" class="text-danger" /> 
            </div>        
            <button type="submit" class="btn btn-primary">Create</button>
        </EditForm>
    </div>
</div>

<div>
    <a href="/adoptionapplications">Back to List</a>
</div>

@code {
    [SupplyParameterFromForm]
    private AdoptionApplication AdoptionApplication { get; set; } = new();

    private List<Customer> Customers = new();
    private List<Pet> Pets = new();

    protected override async Task OnInitializedAsync()
    {
        using var context = DbFactory.CreateDbContext();

        Customers = await context.Customer.ToListAsync();

        // Only show available pets
        Pets = await context.Pet
            .Where(p => !p.IsAdopted)
            .ToListAsync();
    }

    // To protect from overposting attacks, see https://learn.microsoft.com/aspnet/core/blazor/forms/#mitigate-overposting-attacks.
    private async Task AddAdoptionApplication()
    {
        using var context = DbFactory.CreateDbContext();
        context.AdoptionApplication.Add(AdoptionApplication);

        var pet = await context.Pet.FindAsync(AdoptionApplication.PetId);
        if (pet != null)
        {
            pet.IsAdopted = true;
            context.Pet.Update(pet);
        }

        await context.SaveChangesAsync();
        NavigationManager.NavigateTo("/adoptionapplications");
    }
}

@page "/petcategories/edit"
@using Microsoft.EntityFrameworkCore
@using FurryFriendsAdoption.Domain
@inject IDbContextFactory<FurryFriendsAdoption.Data.FurryFriendsAdoptionContext> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Edit</PageTitle>

<h1>Edit</h1>

<h2>PetCategory</h2>
<hr />
@if (PetCategory is null)
{
    <p><em>Loading...</em></p>
}
else
{
    <div class="row">
        <div class="col-md-4">
            <EditForm method="post" Model="PetCategory" OnValidSubmit="UpdatePetCategory" FormName="edit" Enhance>
                <DataAnnotationsValidator />
                <ValidationSummary role="alert"/>
                <input type="hidden" name="PetCategory.Id" value="@PetCategory.Id" />
                <div class="mb-3">
                    <label for="name" class="form-label">Name:</label>
                    <InputText id="name" @bind-Value="PetCategory.Name" class="form-control" />
                    <ValidationMessage For="() => PetCategory.Name" class="text-danger" />
                </div>
                <div class="mb-3">
                    <label for="datecreated" class="form-label">DateCreated:</label>
                    <InputDate id="datecreated" @bind-Value="PetCategory.DateCreated" class="form-control" />
                    <ValidationMessage For="() => PetCategory.DateCreated" class="text-danger" />
                </div>
                <div class="mb-3">
                    <label for="dateupdated" class="form-label">DateUpdated:</label>
                    <InputDate id="dateupdated" @bind-Value="PetCategory.DateUpdated" class="form-control" />
                    <ValidationMessage For="() => PetCategory.DateUpdated" class="text-danger" />
                </div>
                <div class="mb-3">
                    <label for="createdby" class="form-label">CreatedBy:</label>
                    <InputText id="createdby" @bind-Value="PetCategory.CreatedBy" class="form-control" />
                    <ValidationMessage For="() => PetCategory.CreatedBy" class="text-danger" />
                </div>
                <div class="mb-3">
                    <label for="updatedby" class="form-label">UpdatedBy:</label>
                    <InputText id="updatedby" @bind-Value="PetCategory.UpdatedBy" class="form-control" />
                    <ValidationMessage For="() => PetCategory.UpdatedBy" class="text-danger" />
                </div>
                <button type="submit" class="btn btn-primary">Save</button>
            </EditForm>
        </div>
    </div>
}

<div>
    <a href="/petcategories">Back to List</a>
</div>

@code {
    [SupplyParameterFromQuery]
    private int Id { get; set; }

    [SupplyParameterFromForm]
    private PetCategory? PetCategory { get; set; }

    protected override async Task OnInitializedAsync()
    {
        using var context = DbFactory.CreateDbContext();
        PetCategory ??= await context.PetCategory.FirstOrDefaultAsync(m => m.Id == Id);

        if (PetCategory is null)
        {
            NavigationManager.NavigateTo("notfound");
        }
    }

    // To protect from overposting attacks, enable the specific properties you want to bind to.
    // For more information, see https://learn.microsoft.com/aspnet/core/blazor/forms/#mitigate-overposting-attacks.
    private async Task UpdatePetCategory()
    {
        using var context = DbFactory.CreateDbContext();
        context.Attach(PetCategory!).State = EntityState.Modified;

        try
        {
            await context.SaveChangesAsync();
        }
        catch (DbUpdateConcurrencyException)
        {
            if (!PetCategoryExists(PetCategory!.Id))
            {
                NavigationManager.NavigateTo("notfound");
            }
            else
            {
                throw;
            }
        }

        NavigationManager.NavigateTo("/petcategories");
    }

    private bool PetCategoryExists(int id)
    {
        using var context = DbFactory.CreateDbContext();
        return context.PetCategory.Any(e => e.Id == id);
    }
}
